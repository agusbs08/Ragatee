<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="@dimen/_230sdp"
    android:paddingBottom="@dimen/_20sdp"
    android:layout_gravity="center">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Invest"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_button_primary"
        />

    <TextView
        android:id="@+id/tv_deskripsi_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:textAlignment="center"
        android:text="Apakah anda yakin berinvest di produk ini sebesar :"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/tv_jumlah_pendanaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 500.000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <TextView
            android:id="@+id/tv_calcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:textColor="@color/redGoogle"
            />

        <TextView
            android:id="@+id/tv_invest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="INVEST"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:textColor="#29CA7C"
            />

    </LinearLayout>

</LinearLayout>